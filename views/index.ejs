<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>ATN</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    </head>

    <body style="margin: 10px 5px 5px;">
        <table class="table">
                <thread class="table-primary">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Image</th>
                        <th scope="col">Description</th>
                        <th scope="col">Price</th> 
                    </tr>
                </thread>
                <tbody class="table-secondary">
                    <% for(var i=0; i < quotes.length; i++) {%>
                        <tr>
                            <td>
                                <%= quotes[i].name %>
                            </td>
                            <td>
                                <img src="/img/<%= quotes[i].photo %>" alt="Product Image" style="width: 100px; height: 100px;">
                            </td>
                            <td>
                                <%= quotes[i].description %>
                            </td>
                            <td>
                                <%= quotes[i].price %>$
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
            <a href="/add" class="btn btn-outline-primary">Add Product</a>
    </body>

</html>